doctype html
html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
        title My info
    body
        .container
            ul.nav.nav-tabs
                h2
                    span#fullname Trần Trung Kiên
                a(href='http://fit.uet.vnu.edu.vn')
                    span#faculty Khoa Công nghệ Thông tin

                | ,
                a(href='/rsa')
                    span#school  Mã hóa RSA
                | ,
                a(href='http://vnu.edu.vn')
                    span#university  ĐHQGHN
                | .
                br
                br
                li.active
                    a(href='#')
                        span#info(onclick="showContentPane('info');") Thông tin cá nhân
                li
                    a(href='#')
                        span#skills(onclick="showContentPane('skills');") Kĩ năng
                li
                    a(href='#')
                        span#hobby(onclick="showContentPane('hobby');") Sở thích
            #info_details.content-pane
                div(style='padding-left:50px;')
                    br
                    a(href='#') Tien ich
                    div.jumbotron
                        h2 Số nguyên tố
                        div.panel.panel-default
                            div.panel-body
                                form(action='')
                                    select#sl
                                        option(value= '1') Kiểm tra
                                        option(value= '2') Lớn hơn gần nhất
                                        option(value= '3') Nhỏ hơn gần nhất
                                    text    &nbsp;&nbsp;&nbsp;
                                    input#number( type = 'text')
                                    text    &nbsp;
                                    input#sb(type = 'button' value = 'submit')
                                h4#result
                    div.jumbotron
                        h2 Phân tích 1 số thành thừa số nguyên tố
                        div.panel.panel-default
                            div.panel-body
                                form(action='')
                                    text    &nbsp;&nbsp;&nbsp;
                                    input#number2( type = 'text')
                                    text    &nbsp;
                                    input#sb2(type = 'button' value = 'submit')
                                h4#result2
                    div.jumbotron
                        h2 Tính modulo
                        div.panel.panel-default
                            div.panel-body
                                form(action='')
                                    text    &nbsp;&nbsp;&nbsp;
                                    input#number3( type = 'text' size = '6')
                                    text  ^ 
                                    input#pow( type = 'text' size = '5')
                                    text  mod 
                                    input#modulo( type = 'text' size = '5')
                                    text    &nbsp;
                                    input#sb3(type = 'button' value = 'submit')
                                h4#result3
                    br
            #skills_details.content-pane
                div(style='padding-left:50px;')
                    br
                    li   C/C++
                    li  Java
                    li   Node.js
                    br
            #hobby_details.content-pane
                div(style='padding-left:50px;')
                    br
                    li
                        span#playgame
                    li
                        span#playguitar
                    br

        script(type='text/javascript').
            
            function hideAllContentPanes() {
                document.getElementById("info_details").style.display = "none";
                document.getElementById("skills_details").style.display = "none";
                document.getElementById("hobby_details").style.display = "none";
            }
            function showContentPane(paneid) {
                hideAllContentPanes();
                document.getElementById(paneid+"_details").style.display = "";
            }
        
            showContentPane("info");
            translate(1);
